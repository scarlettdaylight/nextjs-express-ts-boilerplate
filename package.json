{
  "name": "nextjs-express-ts-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build && node ./lang/default-lang.js",
    "build:prod": "cross-env NODE_ENV=production yarn run build",
    "prebuild": "node scripts/cleanBuild.js",
    "serve": "cross-env NODE_ENV=production node ./server.js",
    "dev": "nodemon ./server.js",
    "prod": "yarn run build:prod && yarn run serve",
    "lint": "eslint --report-unused-disable-directives \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn run lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "axios": "^0.19.0",
    "babel-plugin-react-intl": "^5.1.11",
    "compression": "^1.7.4",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "intl-messageformat": "^7.7.2",
    "lodash": "^4.17.15",
    "mobx": "^4.15.1",
    "mobx-react-lite": "^1.4.1",
    "next": "^9.3.2",
    "next-compose-plugins": "^2.2.0",
    "next-cookies": "^2.0.3",
    "next-images": "^1.2.0",
    "next-transpile-modules": "^2.3.1",
    "node-sass": "^4.12.0",
    "nookies": "^2.0.8",
    "nprogress": "^0.2.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-intl": "^3.9.2",
    "react-lazy-load-image-component": "^1.3.2",
    "styled-components": "^4.4.0",
    "styled-system": "^5.1.2",
    "type-fest": "^0.8.1",
    "xmldom": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.140",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.1",
    "@types/react-helmet": "^5.0.14",
    "@types/react-lazy-load-image-component": "^1.3.0",
    "@types/styled-components": "^4.4.1",
    "@types/styled-system": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.12.2",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-xo-typescript": "^0.23.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "glob": "^7.1.5",
    "husky": "^3.0.9",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --report-unused-disable-directives --fix",
      "git add"
    ],
    "*.{css,json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server/**/*",
      "next.config.js",
      "server.js",
      "package.json",
      "yarn.lock"
    ]
  }
}
